{{!-- Top card/Post --}}
<div class="posts list-group">
  <div class="post card">
      <h1 class="card-header flex-row justify-space-between">
          <div>{{title}}</div>
          <div class="name-date">Posted by '{{User.username}}' on {{format_date createdAt}}</div>
      </h1>
      <p class="card-body">
          {{body}}
      </p>
  </div>

{{!-- Previous comments --}}
{{#each Comments as |comment| }}
<div class="post card">
        <h1 class="card-header com-header"></h1>

    <p class="card-body">
        {{comment.body}}
    </p>
    <p class="card-body">
        ~ {{../User.username}}, {{format_date ../createdAt}}
    </p>
</div>
{{/each}}

{{!-- Comment submission Allowed only if logged in--}}
{{#if logged_in}}
<div class="post card">
  <form id="new-comment-form" class="card-body">
    <div>
      <label for="post-body" class="form-label">Comment:</label>
      <textarea name="comment-body" type="text" id="post-body" class="form-textarea form-input"></textarea>
    </div>
    <button type="submit" class="btn">Submit</button>
  </form>
</div>
{{else}}
<div class="card-body text-center">
  Login to post a comment!
</div>
{{/if}}

<script src="/js/comment.js"></script>