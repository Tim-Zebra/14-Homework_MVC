{{!-- Top card/Post --}}
<div class="post card">
    <h1 class="card-header">
        {{title}}
    </h1>
    <p class="card-body">
        {{body}}
    </p>
</div>

{{!-- Previous comments --}}
{{#each comments as |comment| }}
<div class="post card">
    <h1 class="card-header">
    </h1>
    <p class="card-body">
        {{body}}
    </p>
</div>
{{/each}}


{{!-- Comment submission --}}
<div class="post card">
  <form id="new-comment-form" class="card-body">
    <div>
      <label for="post-body">Comment:</label>
      <textarea name="comment-body" type="text" id="post-body" class="form-textarea form-input"></textarea>
    </div>
    <button type="submit" class="btn">Submit</button>
  </form>
</div>


<script src="/js/comment.js"></script>